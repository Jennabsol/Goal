@model IEnumerable<Goal.Models.Goals>

@{ ViewData["Title"] = "Index"; }

<div class="wrapper">
    <div class="page-header" style="background-image: url('/images/ricardo-gomez-angel-557141-unsplash.jpg');">
        <div class="filter"></div>
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header">
                            <h4 class="card-title"> Goal</h4>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table">
                                    <thead class=" text-primary">
                                        <tr>

                                            <th>
                                                Name
                                            </th>
                                            <th>
                                                DateCreated
                                            </th>
                                            <th class="text-right"></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>
                                                    <a class="btn btn-link btn-warning" asp-controller="SprintGroups" asp-action="index" asp-route-id="@item.Id"> @Html.DisplayFor(modelItem => item.Name) </a>
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.DateCreated)
                                                </td>

                                                <td class="text-right">
                                                    <a asp-action="Edit" asp-route-id="@item.Id">
                                                        <i class="fa fa-pencil"></i>
                                                    </a>
                                                    <a asp-action="Delete" asp-route-id="@item.Id">
                                                        <i class="fa fa-trash"></i>
                                                    </a>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                       
                        <p class="text-center">
                            <a class="btn btn-link btn-danger" asp-action="Create">Create New Goal</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

