@model Goal.Models.SprintGroupViewModels.CreateSprintGroupViewModel

@{
    ViewData["Title"] = "Create";
}

<div class="wrapper">
    <div class="page-header topCenter" style="background-image: url('/images/henrik-donnestad-506152-unsplash.jpg');">
        <div class="filter"></div>
        <div class="container">
            <div class="row">
                <div class="col-lg-4 ml-auto mr-auto">
                    <div class="card logReg marginTop card-register">
                        <h3 class="title">Create A Sprint!</h3>
                        <form asp-action="Create">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="SprintGroup.Name" class="control-label"></label>
                                <input asp-for="SprintGroup.Name" class="form-control" />
                                <span asp-validation-for="SprintGroup.Name" class="text-danger"></span>
                            </div>

                            <input type="hidden" name="GoalsId" value="@Model.GoalsId" />
                            <div class="form-group">

                                <input type="submit" value="Create" class="btn btn-primary btn-block btn-round" />
                            </div>
                        </form>
                        <div class="forgot">
                            <a asp-action="Index" asp-route-id="@Model.GoalsId">Back to List</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
