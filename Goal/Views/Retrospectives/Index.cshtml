@model Goal.Models.RetrospectiveViewModels.ListRetrospectivevViewModel

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a class="btn btn-default" asp-controller="Retrospectives" asp-action="Create" asp-route-id="@Model.SprintGroup.Id">Add Retrospective</a>
    <a asp-controller="DailySprints" asp-action="Index" asp-route-id="@Model.SprintGroup.Id" class="btn btn-default">Back To Goal List</a>
</p>
<table class="table">
    <thead>
        <tr>
                <th>
                    DateCreated
                </th>
                <th>
                    Success
                </th>
                <th>
                    Challenges
                </th>
                <th>
                    EndState 
                </th>
            <th>
               Sprint Name
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Retrospective) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DateCreated)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Success)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Challenges)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndState)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SprintGroup.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
