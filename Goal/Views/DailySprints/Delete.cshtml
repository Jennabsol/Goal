@model Goal.Models.DailySprintViewModels.DeleteDailySprintViewModel

@{
    ViewData["Title"] = "Delete";
}

<div class="wrapper">
    <div class="page-header topCenter" style="background-image: url('/images/annie-spratt-256177-unsplash.jpg');">
        <div class="filter"></div>
        <div class="container">
            <div class="row">
                <div class="col-lg-4 ml-auto mr-auto">
                    <div class="card  marginTop card-register">
                        <h3 class="title">Delete?</h3>
                        <dl class="dl-horizontal">
                            <dt>
                                @Html.DisplayNameFor(model => model.DailySprints.DateCreated)
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.DailySprints.DateCreated)
                            </dd>
                            <dt>
                                @Html.DisplayNameFor(model => model.DailySprints.CurrentState)
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.DailySprints.CurrentState)
                            </dd>
                            <dt>
                                @Html.DisplayNameFor(model => model.DailySprints.Notes)
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.DailySprints.Notes)
                            </dd>
                            <dt>
                                @Html.DisplayNameFor(model => model.DailySprints.SprintGroup)
                            </dt>
                            <dd>
                                @Html.DisplayFor(model => model.DailySprints.SprintGroup.Name)
                            </dd>
                        </dl>
                        <div class="forgot text-center">
                            <form asp-action="Delete">
                                <input type="hidden" asp-for="SprintGroupId" />
                                <input type="submit" value="Delete" class="btn btn-default" /> 
                                <br />
                                <a asp-action="Index" asp-route-id="@Model.SprintGroupId">Back to List</a>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
